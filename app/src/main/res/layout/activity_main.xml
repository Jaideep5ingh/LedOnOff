<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.component.independent.thingspeakwrite.MainActivity">

    <Button
        android:text="OFF_Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dr_on_light"
        android:layout_toEndOf="@+id/textView"
        android:id="@+id/dr_off_light"
        android:layout_toRightOf="@+id/textView" />

    <Button
        android:text="ON_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="54dp"
        android:id="@+id/dr_on_light"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Drawing Room Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/dr_on_light"
        android:layout_toEndOf="@+id/dr_on_light" />

    <Button
        android:text="OFF_Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/br_on_light"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:id="@+id/br_off_light" />

    <TextView
        android:text="Bed Room status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginTop="109dp"
        android:layout_below="@+id/dr_on_light"
        android:layout_toRightOf="@+id/br_on_light"
        android:layout_toEndOf="@+id/br_on_light" />

    <Button
        android:text="ON_Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:id="@+id/br_on_light"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/dr_on_light"
        android:layout_alignEnd="@+id/dr_on_light" />

    <Button
        android:text="ON_Fan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/br_on_light"
        android:layout_alignEnd="@+id/br_on_light"
        android:layout_marginBottom="13dp"
        android:id="@+id/br_on_fan" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/br_on_fan"
        android:layout_alignLeft="@+id/br_off_light"
        android:layout_alignStart="@+id/br_off_light"
        android:id="@+id/br_off_fan" />

    <Button
        android:text="ON_Fan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dr_on_light"
        android:layout_alignRight="@+id/dr_on_light"
        android:layout_alignEnd="@+id/dr_on_light"
        android:layout_marginTop="17dp"
        android:id="@+id/dr_on_fan" />

    <Button
        android:text="OFF_Fan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dr_on_fan"
        android:layout_alignLeft="@+id/dr_off_light"
        android:layout_alignStart="@+id/dr_off_light"
        android:id="@+id/dr_off_fan" />
</RelativeLayout>
